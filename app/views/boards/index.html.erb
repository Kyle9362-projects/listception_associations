<div class="page-header">
  <h1>
    Boards
    <a href="/boards/new" class="btn btn-lg btn-default">New Board</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @boards.each do |board| %>
      <tr>
        <td><%= board.title %></td>
        <td><%= board.description %></td>
        <td>
          <a href="/boards/<%= board.id %>" class="btn btn-default">Show</a>
          <a href="/boards/<%= board.id %>/edit" class="btn btn-default">Edit</a>
          <a href="/delete_board/<%= board.id %>" class="btn btn-default" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
