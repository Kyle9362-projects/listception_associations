<div class="page-header">
  <h1>
    Notes
    <a href="/notes/new" class="btn btn-lg btn-default">New Note</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Body</th>
        <th>Card</th>
        <th>Actions</th>
      </tr>

      <% @notes.each do |note| %>
      <tr>
        <td><%= note.body %></td>
        <td><%= note.card_id %></td>
        <td>
          <a href="/notes/<%= note.id %>" class="btn btn-default">Show</a>
          <a href="/notes/<%= note.id %>/edit" class="btn btn-default">Edit</a>
          <a href="/delete_note/<%= note.id %>" class="btn btn-default" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
